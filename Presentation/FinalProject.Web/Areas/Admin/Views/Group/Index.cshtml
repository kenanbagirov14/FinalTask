@model ICollection<GroupViewDTO>
<div class="text-left">
    <a class="btn btn-success btn-sm" asp-area="Admin" asp-controller="Group" asp-action="Create">Create</a>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Teacher name</th>
                <th scope="col">Max Age</th>
                <th scope="col">Min Age</th>
                <th scope="col">#</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.GroupName</td>
                        <td>@item.TeacherName</td>
                        <td>@item.MinAge</td>
                        <td>@item.MaxAge</td>
                        <td>
                            <a class="btn btn-danger btn-sm" asp-area="Admin" asp-controller="Group" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            <a class="btn btn-info btn-sm" asp-area="Admin" asp-controller="Group" asp-action="Update" asp-route-id="@item.Id">Update</a>
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>
</div>
