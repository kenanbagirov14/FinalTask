@model ICollection<MessageViewDTO>
<div class="text-left">
    <a class="btn btn-success btn-sm" asp-area="Admin" asp-controller="Message" asp-action="Create">Create</a>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Email</th>
                <th scope="col">Name</th>
                <th scope="col">IsView</th>
                <th scope="col">#</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Email</td>
                        <td>@item.Name</td>
                        @{
                            if (item.IsView)
                            {
                                <td class="text-success">Viewed</td>
                            }
                            else
                            {
                                <td class="text-danger">Not Viewed</td>
                            }
                        }
                        
                        
                        <td>
                            <a class="btn btn-danger btn-sm" asp-area="Admin" asp-controller="Mressage" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            <a class="btn btn-info btn-sm" asp-area="Admin" asp-controller="Message" asp-action="Update" asp-route-id="@item.Id">Show Message</a>
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>
</div>
