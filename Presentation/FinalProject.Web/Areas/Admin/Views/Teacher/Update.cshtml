@model TeacherUpdateDTO

<div class="card-body">
    <div class="container">
        <div class="row">
            <form asp-area="Admin" asp-controller="Teacher" asp-action="Update" method="post" enctype="multipart/form-data" class="form-group">
                <input type="hidden" name="Id" class="form-control" value="@Model.Id" />                
                <input type="hidden" name="ImagaFullPath" class="form-control" value="@Model.ImagaFullPath" />
                <input type="hidden" name="ImagaPath" class="form-control" value="@Model.ImagaPath" />
                <div class="col-6">
                    <span>Date</span>
                    <input type="text" name="Name" class="form-control" value="@Model.Name" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="col-6">
                    <span>Surname</span>
                    <input type="text" name="Surname" class="form-control" value="@Model.Surname" />
                    <span asp-validation-for="@Model.Surname" class="text-danger"></span>
                </div>
                <div class="col-6">
                    <span>Experience</span>
                    <input type="number" name="Experience" class="form-control" value="@Model.Experience" />
                    <span asp-validation-for="@Model.Experience" class="text-danger"></span>
                </div>
                <div class="col-6">
                    <span>BirthDate</span>
                    <input type="date" name="BirthDate" class="form-control" data-value="true" value="@Model.BirthDate" />
                    <span asp-validation-for="@Model.BirthDate" class="text-danger"></span>
                </div>
                <div class="col-6">
                    <span>Select file</span>
                    <input type="file" name="File" class="form-control" value="@Model.File" />
                    <span asp-validation-for="@Model.File" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <span>Descripption</span>
                    <textarea name="File" class="form-control">@Model.Descripption</textarea>
                    <span asp-validation-for="@Model.Descripption" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary mt-4">Submit</button>
            </form>
        </div>
    </div>
</div>
